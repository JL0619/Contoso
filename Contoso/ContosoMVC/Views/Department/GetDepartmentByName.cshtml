@model Contoso.Models.Departments
@{
    ViewBag.Title = "GetDepartmentByName";
}
    <h2>GetDepartmentByName</h2>
    <body>
        <div>
            @using(Html.BeginForm("GetDepartmentByName", "Department", FormMethod.Post))
            {
                @Html.TextBox("Name");
                <input type="submit" value="submit" />
            }
        </div>
        @if (Model != null)
        {
            <table class="table">
                <tr>
                    <td>@Model.Id</td>
                    <td>@Model.Name</td>
                    <td>@Model.Budget</td>
                </tr>
            </table>
        }

    </body>


