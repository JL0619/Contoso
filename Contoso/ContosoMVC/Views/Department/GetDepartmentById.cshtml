@model Contoso.Models.Departments
@{
    ViewBag.Title = "GetDepartmentById";
}

<body>
    <div>
        @using (Html.BeginForm("GetDepartmentById", "Department",FormMethod.Post)){
            @Html.TextBox("DepartmentId");
            <input type = "submit" value = "submit" />
        }
    </div>
    @if (Model != null){
        <table class="table">
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Name</td>
                <td>@Model.Budget</td>
            </tr>
        </table>
     }
</body>


